[Unit]
Description=Touch Calendar Application
After=graphical-session.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/calendar-app
Environment=DISPLAY=:0
ExecStartPre=/bin/sleep 10
ExecStart=/home/pi/calendar-app/start_calendar.sh
Restart=always
RestartSec=3

[Install]
WantedBy=graphical-session.target
